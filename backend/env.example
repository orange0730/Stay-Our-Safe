# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Settings
CORS_ORIGIN=http://localhost:3000

# API Keys - 選擇其中一種 AI 服務
# Option 1: Standard OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Option 2: Azure OpenAI API (推薦)
AZURE_OPENAI_ENDPOINT=https://eastus.api.cognitive.microsoft.com
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt4o-mini

# External APIs (政府資料來源)
GOV_API_URL=https://alerts.ncdr.nat.gov.tw/api
GOV_API_KEY=your_gov_api_key_here
CWA_API_KEY=your_cwa_api_key_here

# Azure Cosmos DB
COSMOS_CONNECTION_STRING=your_cosmos_connection_string_here

# Map Service
MAPBOX_API_KEY=your_mapbox_api_key_here

# Database (for future use)
DATABASE_URL=postgresql://user:password@localhost:5432/stayoursafe

# Cron Job Settings
DATA_FETCH_INTERVAL=*/15 * * * * # Every 15 minutes

# Notification Settings
PUSH_NOTIFICATION_SERVER=
DANGER_ZONE_RADIUS=1000 # meters

# Logging
LOG_LEVEL=info 